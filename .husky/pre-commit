#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

BLUE='\033[44m'
RED='\033[101m'
YELLOW='\033[103m'
GREEN='\033[42m'
NC='\033[0m' # No Color

RED_COLOR='\033[31m'
YELLOW_COLOR='\033[93m'
GREEN_COLOR='\033[92m'

border () {
  local str="$*" # Put all arguments into single string
  local len=${#str}
  local i
  for (( i = 0; i < len - 30; ++i )); do
     printf "${GREEN_COLOR}-"
  done
  printf "\n${GREEN_COLOR}| ${NC}$str"
  for (( i = 0; i < len - 30; ++i )); do
    printf "${GREEN_COLOR}-"
  done
  echo
}

parse_git_user() {
  git config --get user.name
}
parse_current_branch() {
  git rev-parse --abbrev-ref HEAD
}

now="$(date +'%A %H:%M:%S %d/%m/%Y %Z')"
border ">>> Hello $(parse_git_user). You are ${GREEN_COLOR}commiting${NC} on: ${BLUE}$(parse_current_branch)${NC} branch ($now) üòç\n"
